<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FF6E40</item>
        <item name="colorPrimaryDark">#FBC02D</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="colorAccent">#FF6E40</item>          <!--//設定fab介面元件顏色-->
        <item name="android:textSize">30dp</item>         <!--//設定程式介面元件文字大小-->
        <item name="android:textColor">#000000</item>     <!--//設定程式介面元件文字顏色-->

        <!--<item name="android:background">#FFAB40</item>  &lt;!&ndash;//設定layout背景顏色&ndash;&gt;-->
    </style>

    <style name="AppStyle1" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">30dp</item>         <!--//設定程式介面元件文字大小-->
        <item name="android:textColor">#445566</item>    <!-- //設定程式介面元件文字顏色-->
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_color_pinkyellow</item>
    </style>
    <style name="AppStyle2" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textSize">30dp</item>         //設定程式介面元件文字大小
        <item name="android:textColor">#445566</item>     //設定程式介面元件文字顏色
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_color_green_white</item>
    </style>

    <style name="BarText">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>
</resources>
