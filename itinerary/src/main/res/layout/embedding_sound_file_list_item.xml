<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".HomeActivity"
    android:background="@drawable/background_color_green_white">

    <LinearLayout
        android:layout_width="@dimen/useWeight"
        android:layout_height="match_parent"
        android:layout_weight="3.5"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/soundFileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mySweetSong.mp3"
            android:textSize="@dimen/textSizeExplain"/>

        <TextView
            android:id="@+id/soundShootTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016/08/20 12:30 啟動"
            android:textSize="@dimen/textSizeExtraFineExplain"/>
    </LinearLayout>

    <ImageButton
        android:id="@+id/mediaController"
        android:layout_width="@dimen/useWeight"
        android:layout_height="60sp"
        android:layout_gravity="right|center_vertical"
        android:layout_weight="1"
        android:background="@drawable/button_play"/>

</LinearLayout>
