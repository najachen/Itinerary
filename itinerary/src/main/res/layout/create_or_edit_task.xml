<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFECB3"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ChoiceHomeActivity">

    <LinearLayout
        android:id="@+id/headerButtonTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/backChoiceOutdoorAllOperation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_shape_index_1"
            android:text="取消"
            android:textColor="#445566"/>

        <Button
            android:id="@+id/resetFields"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_shape_index_1"
            android:text="清空"
            android:textColor="#445566"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <Button
            android:id="@+id/saveTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_shape_index_1"
            android:text="確定"
            android:textColor="#445566"/>
    </LinearLayout>

    <TextView
        android:id="@+id/createOrEditTaskTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerButtonTask"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/labelPaddingTop"
        android:text="編輯行程"
        android:textColor="#445566"
        android:textSize="@dimen/textSizeLargeTitle"/>

    <TextView
        android:id="@+id/nameLabelTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/createOrEditTaskTitle"
        android:paddingTop="@dimen/labelPaddingTop"
        android:text="名稱："
        android:textColor="#445566"
        android:textSize="@dimen/textSizeTitle"/>

    <EditText
        android:id="@+id/taskName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/nameLabelTask"
        android:layout_toRightOf="@id/nameLabelTask"
        android:textSize="@dimen/textSizeTitle"/>

    <TextView
        android:id="@+id/dateLabelTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/nameLabelTask"
        android:paddingTop="@dimen/labelPaddingTop"
        android:text="日期："
        android:textColor="#445566"
        android:textSize="@dimen/textSizeTitle"/>

    <EditText
        android:id="@+id/taskDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/dateLabelTask"
        android:layout_toRightOf="@+id/dateLabelTask"
        android:inputType="date"
        android:textSize="@dimen/textSizeTitle"/>

    <TextView
        android:id="@+id/timeLabelTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateLabelTask"
        android:paddingTop="@dimen/labelPaddingTop"
        android:text="時間："
        android:textColor="#445566"
        android:textSize="@dimen/textSizeTitle"/>

    <EditText
        android:id="@+id/taskTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/timeLabelTask"
        android:layout_toRightOf="@id/timeLabelTask"
        android:inputType="time"
        android:textSize="@dimen/textSizeTitle"/>

    <TextView
        android:id="@+id/siteLabelTask"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeLabelTask"
        android:paddingTop="@dimen/labelPaddingTopLines2"
        android:text="地點："
        android:textColor="#445566"
        android:textSize="@dimen/textSizeTitle"/>

    <EditText
        android:id="@+id/taskSite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/siteLabelTask"
        android:layout_toRightOf="@id/siteLabelTask"
        android:lines="3"
        android:textSize="@dimen/textSizeTitle"/>

    <Button
        android:id="@+id/createSchedule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_shape_index_1"
        android:text="設定提醒"
        android:textColor="#445566"/>

</RelativeLayout>
