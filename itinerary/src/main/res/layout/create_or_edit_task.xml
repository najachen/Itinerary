<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ChoiceHomeActivity"
    android:background="@color/highlighted_text_material_dark">

    <LinearLayout
        android:id="@+id/header_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="取消"
            android:background="@drawable/btn_shape_index_1"
            android:textColor="#445566"
            android:id="@+id/Btn_Back" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="清空設定"
            android:background="@drawable/btn_shape_index_1"
            android:textColor="#445566"
            android:id="@+id/Btn_Clearn" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="確定"
            android:background="@drawable/btn_shape_index_1"
            android:textColor="#445566"
            android:id="@+id/Btn_Enter" />
    </LinearLayout>

    <TextView
        android:id="@+id/create_task_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_button"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/labelPaddingTop"
        android:text="編輯行程"
        android:textColor="#445566"
        android:textSize="@dimen/textSizeLargeTitle"/>
    <TextView
        android:id="@+id/name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/labelPaddingTop"
        android:text="名稱："
        android:textColor="#445566"
        android:textSize="@dimen/textSizeTitle"
        android:layout_below="@+id/create_task_title"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/create_task_title"
        android:layout_toRightOf="@id/date_label"
        android:text="行程名稱"
        android:textSize="@dimen/textSizeTitle"/>

    <TextView
        android:id="@+id/date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/labelPaddingTop"
        android:text="日期："
        android:textColor="#445566"
        android:textSize="@dimen/textSizeTitle"
        android:layout_below="@+id/name_label"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/date_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:text="2016-09-01"
        android:textSize="@dimen/textSizeTitle"
        android:layout_alignTop="@+id/date_label"
        android:layout_toRightOf="@+id/date_label" />

    <TextView
        android:id="@+id/time_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_label"
        android:paddingTop="@dimen/labelPaddingTop"
        android:text="時間："
        android:textColor="#445566"
        android:textSize="@dimen/textSizeTitle"/>

    <EditText
        android:id="@+id/time_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_label"
        android:layout_toRightOf="@id/time_label"
        android:inputType="time"
        android:text="12:00"
        android:textSize="@dimen/textSizeTitle"/>

    <TextView
        android:id="@+id/site_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/time_label"
        android:paddingTop="@dimen/labelPaddingTopLines2"
        android:text="地點："
        android:textColor="#445566"
        android:textSize="@dimen/textSizeTitle"/>

    <EditText
        android:id="@+id/site_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/time_label"
        android:layout_toRightOf="@id/site_label"
        android:lines="2"
        android:text="民生東路三段 - 世界兒童展望會"
        android:textSize="@dimen/textSizeTitle"/>

