<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
    <shape>
        <gradient
            android:startColor="#FFFFFF"
            android:endColor="@color/amber_300"
            android:angle="270" />
        <!--建層顏色開始-->
        <!--建層顏色結束-->
        <!--建層顏色角度-->
    <!-- padding設置内容區域離邊界的間距 -->
    <padding
        android:bottom="12dp"
        android:left="12dp"
        android:right="12dp"
        android:top="12dp" />
    <!-- corners設置圓角，只适用于rectangle -->
    <corners android:radius="20dp"/>
    <!--android:topLeftRadius= "50dp"-->
    <!--android:topRightRadius="50dp"-->
    <!--android:bottomLeftRadius="100dp"-->
    <!--android:bottomRightRadius="100dp"-->

    <!-- stroke设置描边 -->
    <stroke
        android:width="2dp"
        android:color="@color/red_a200" />
    </shape>
    </item>

    <item>
        <shape>
            <solid android:color="#FFFFFF" />

            <stroke
                android:width="2dp"
                android:color="@color/red_a200" />
            <corners
                android:radius="20dp" />
            <!--倒角-->
            <padding
                android:left="12dp"
                android:top="12dp"
                android:right="12dp"
                android:bottom="12dp" />
        </shape>
    </item>
</selector>
